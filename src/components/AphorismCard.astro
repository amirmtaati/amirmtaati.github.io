---
export interface Props {
  aphorism: {
    content: string;
    date: Date;
    id: string;
  }
}

const { aphorism } = Astro.props;
---

<article class="mb-8 p-6 rounded-xl bg-gl-bg2/50 dark:bg-gd-bg2/50 border border-gl-border dark:border-gd-border hover:shadow-md transition-all">
  <blockquote class="font-serif text-xl italic mb-4 leading-relaxed">
    "{aphorism.content}"
  </blockquote>
  
  <div class="flex justify-end">
    <time class="text-sm text-gl-fg2 dark:text-gd-fg2">
      {new Date(aphorism.date).toLocaleDateString('en-US', {
        year: 'numeric',
        month: 'long',
        day: 'numeric'
      })}
    </time>
  </div>
  
  <a href={`/aphorisms/${aphorism.id}`} class="absolute inset-0" aria-label="View aphorism details">
    <span class="sr-only">View details</span>
  </a>
</article>