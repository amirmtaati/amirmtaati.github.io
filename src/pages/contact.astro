---
// src/pages/contact.astro
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import ThemeToggle from '../components/ThemeToggle.astro';
---

<BaseLayout>
  <Navigation slot="navigation" />
  <ThemeToggle slot="theme-toggle" />

  <div>
    <div class="flex flex-col items-center mb-12">
      <h1 class="heading text-3xl mb-2">Contact Me</h1>
      <div class="w-20 h-1 bg-gl-accent dark:bg-gd-accent rounded-full"></div>
    </div>
    
    <div class="prose prose-lg dark:prose-invert max-w-none mb-10">
      <p>
        Have a question, comment, or just want to say hello? Feel free to reach out through any of the channels below.
        I'd love to hear from you!
      </p>
    </div>
    
    <div class="space-y-6 mb-12">
      <div class="p-5 border-b border-gl-border dark:border-gd-border">
        <a href="mailto:amirmtaati@gmail.com" class="text-lg hover:text-gl-accent dark:hover:text-gd-accent transition-colors">
          Email: amirmtaati@gmail.com
        </a>
      </div>
      
      <div class="p-5 border-b border-gl-border dark:border-gd-border">
        <a href="https://github.com/amirmtaati" target="_blank" rel="noopener noreferrer" class="text-lg hover:text-gl-accent dark:hover:text-gd-accent transition-colors">
          GitHub: @amirmtaati
        </a>
      </div>
      
      <div class="p-5 border-b border-gl-border dark:border-gd-border">
        <a href="https://t.me/amirmtaati_bot" target="_blank" rel="noopener noreferrer" class="text-lg hover:text-gl-accent dark:hover:text-gd-accent transition-colors">
          Telegram: @amirmtaati_bot
        </a>
      </div>
     </div>
  </div>
  
  <Footer slot="footer" />
</BaseLayout>