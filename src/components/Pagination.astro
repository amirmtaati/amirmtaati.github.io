---
export interface Props {
  currentPage: number;
  totalPages: number;
  basePath: string;
}

const { currentPage, totalPages, basePath } = Astro.props;

// Generate an array of page numbers
const pageNumbers = Array.from({ length: totalPages }, (_, i) => i + 1);
---

<nav class="flex justify-center mt-12" aria-label="Pagination">
  <ul class="flex items-center gap-3 p-2 rounded-xl bg-gl-bg2/50 dark:bg-gd-bg2/50 border border-gl-border dark:border-gd-border">
    <!-- Previous button -->
    {currentPage > 1 && (
      <li>
        <a 
          href={currentPage === 2 ? basePath : `${basePath}/${currentPage - 1}`}
          class="flex items-center justify-center w-10 h-10 rounded-full text-gl-fg2 dark:text-gd-fg2 hover:bg-gl-bg2 dark:hover:bg-gd-bg2 hover:text-gl-fg dark:hover:text-gd-fg transition-colors"
          aria-label="Previous page"
        >
          <span class="i-carbon-chevron-left w-5 h-5"></span>
        </a>
      </li>
    )}
    
    <!-- Page numbers -->
    {pageNumbers.map(num => (
      <li>
        <a 
          href={num === 1 ? basePath : `${basePath}/${num}`}
          class={`flex items-center justify-center w-10 h-10 rounded-full font-medium transition-colors
            ${currentPage === num 
              ? "bg-gl-accent dark:bg-gd-accent text-white shadow-md" 
              : "hover:bg-gl-bg2 dark:hover:bg-gd-bg2 text-gl-fg2 dark:text-gd-fg2 hover:text-gl-fg dark:hover:text-gd-fg"}`}
          aria-current={currentPage === num ? "page" : undefined}
        >
          {num}
        </a>
      </li>
    ))}
    
    <!-- Next button -->
    {currentPage < totalPages && (
      <li>
        <a 
          href={`${basePath}/${currentPage + 1}`}
          class="flex items-center justify-center w-10 h-10 rounded-full text-gl-fg2 dark:text-gd-fg2 hover:bg-gl-bg2 dark:hover:bg-gd-bg2 hover:text-gl-fg dark:hover:text-gd-fg transition-colors"
          aria-label="Next page"
        >
          <span class="i-carbon-chevron-right w-5 h-5"></span>
        </a>
      </li>
    )}
  </ul>
</nav>