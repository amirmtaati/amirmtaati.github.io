---
export interface Props {
  post: {
    title: string;
    slug: string;
    excerpt: string;
    date: Date;
    tags: string[];
  }
}

const { post } = Astro.props;
import Tag from './Tag.astro';
---

<article class="mb-8 pb-8 border-b border-gl-border/40 dark:border-gd-border/40 last:border-0 last:mb-0 last:pb-0">
  <a href={`/blog/${post.slug}`} class="no-underline text-inherit visited:text-inherit outline-none block group pb-5">
    <h1 class="heading text-2xl mb-3 group-hover:text-gl-accent dark:group-hover:text-gd-accent transition-colors text-4xl font-bold">
      {post.data.title}
    </h1>
  </a>
  
  <div class="flex items-center flex-wrap gap-4 mb-4 text-sm">
    <time class="text-gl-fg2 dark:text-gd-fg2 flex items-center gap-2">
      <span class="i-carbon-calendar text-lg"></span>
      {new Date(post.data.date).toLocaleDateString('en-US', {
        year: 'numeric',
        month: 'long',
        day: 'numeric'
      })}
    </time>
    
    <div class="flex flex-wrap gap-2">
      {post.data.tags.map((tag) => (
        <Tag name={tag} />
      ))}
    </div>
  </div>
  
  <p class="text-gl-fg2 dark:text-gd-fg2 leading-relaxed">
    {post.data.description}
  </p>
</article>