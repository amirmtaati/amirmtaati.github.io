---
// src/pages/contact.astro
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import ThemeToggle from '../components/ThemeToggle.astro';
---

<BaseLayout>
  <Navigation slot="navigation" />
  <ThemeToggle slot="theme-toggle" />

  <div>
    <div class="flex flex-col items-center mb-12">
      <h1 class="heading text-3xl mb-2">Contact Me</h1>
      <div class="w-20 h-1 bg-gl-accent dark:bg-gd-accent rounded-full"></div>
    </div>
    
    <div class="prose prose-lg dark:prose-invert max-w-none mb-10">
      <p>
        Have a question, comment, or just want to say hello? Feel free to reach out through any of the channels below.
        I'd love to hear from you!
      </p>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-10">
      <!-- Email -->
      <a 
        href="mailto:contact@example.com" 
        class="flex items-center p-6 rounded-xl bg-gl-bg2/50 dark:bg-gd-bg2/50 border border-gl-border dark:border-gd-border hover:shadow-md transition-all group"
      >
        <span class="i-carbon-email text-4xl text-gl-accent dark:text-gd-accent mr-4"></span>
        <div>
          <h2 class="text-xl font-medium mb-1 group-hover:text-gl-accent dark:group-hover:text-gd-accent transition-colors">Email</h2>
          <p class="text-gl-fg2 dark:text-gd-fg2">contact@example.com</p>
        </div>
      </a>
      
      <!-- GitHub -->
      <a 
        href="https://github.com/yourusername" 
        target="_blank" 
        rel="noopener noreferrer" 
        class="flex items-center p-6 rounded-xl bg-gl-bg2/50 dark:bg-gd-bg2/50 border border-gl-border dark:border-gd-border hover:shadow-md transition-all group"
      >
        <span class="i-carbon-logo-github text-4xl text-gl-accent dark:text-gd-accent mr-4"></span>
        <div>
          <h2 class="text-xl font-medium mb-1 group-hover:text-gl-accent dark:group-hover:text-gd-accent transition-colors">GitHub</h2>
          <p class="text-gl-fg2 dark:text-gd-fg2">@yourusername</p>
        </div>
      </a>
      
      <!-- Telegram -->
      <a 
        href="https://t.me/yourusername" 
        target="_blank" 
        rel="noopener noreferrer" 
        class="flex items-center p-6 rounded-xl bg-gl-bg2/50 dark:bg-gd-bg2/50 border border-gl-border dark:border-gd-border hover:shadow-md transition-all group"
      >
        <span class="i-carbon-send-alt text-4xl text-gl-accent dark:text-gd-accent mr-4"></span>
        <div>
          <h2 class="text-xl font-medium mb-1 group-hover:text-gl-accent dark:group-hover:text-gd-accent transition-colors">Telegram</h2>
          <p class="text-gl-fg2 dark:text-gd-fg2">@yourusername</p>
        </div>
      </a>
      
      <!-- Mastodon -->
      <a 
        href="https://mastodon.social/@yourusername" 
        target="_blank" 
        rel="noopener noreferrer" 
        class="flex items-center p-6 rounded-xl bg-gl-bg2/50 dark:bg-gd-bg2/50 border border-gl-border dark:border-gd-border hover:shadow-md transition-all group"
      >
        <span class="i-carbon-logo-mastodon text-4xl text-gl-accent dark:text-gd-accent mr-4"></span>
        <div>
          <h2 class="text-xl font-medium mb-1 group-hover:text-gl-accent dark:group-hover:text-gd-accent transition-colors">Mastodon</h2>
          <p class="text-gl-fg2 dark:text-gd-fg2">@yourusername@mastodon.social</p>
        </div>
      </a>
    </div>
    
    <!-- Contact Form Section -->
    <div class="mt-16">
      <h2 class="heading text-2xl mb-6">Or Send Me a Message</h2>
      
      <form class="space-y-6">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <label for="name" class="block mb-2 text-sm font-medium text-gl-fg dark:text-gd-fg">
              Your Name
            </label>
            <input 
              type="text" 
              id="name" 
              name="name" 
              class="w-full p-3 rounded-xl bg-gl-bg dark:bg-gd-bg2 border border-gl-border dark:border-gd-border focus:ring-2 focus:ring-gl-accent dark:focus:ring-gd-accent focus:border-transparent outline-none transition-all"
              required
            />
          </div>
          <div>
            <label for="email" class="block mb-2 text-sm font-medium text-gl-fg dark:text-gd-fg">
              Your Email
            </label>
            <input 
              type="email" 
              id="email" 
              name="email" 
              class="w-full p-3 rounded-xl bg-gl-bg dark:bg-gd-bg2 border border-gl-border dark:border-gd-border focus:ring-2 focus:ring-gl-accent dark:focus:ring-gd-accent focus:border-transparent outline-none transition-all"
              required
            />
          </div>
        </div>
        
        <div>
          <label for="subject" class="block mb-2 text-sm font-medium text-gl-fg dark:text-gd-fg">
            Subject
          </label>
          <input 
            type="text" 
            id="subject" 
            name="subject" 
            class="w-full p-3 rounded-xl bg-gl-bg dark:bg-gd-bg2 border border-gl-border dark:border-gd-border focus:ring-2 focus:ring-gl-accent dark:focus:ring-gd-accent focus:border-transparent outline-none transition-all"
            required
          />
        </div>
        
        <div>
          <label for="message" class="block mb-2 text-sm font-medium text-gl-fg dark:text-gd-fg">
            Your Message
          </label>
          <textarea 
            id="message" 
            name="message" 
            rows="6" 
            class="w-full p-3 rounded-xl bg-gl-bg dark:bg-gd-bg2 border border-gl-border dark:border-gd-border focus:ring-2 focus:ring-gl-accent dark:focus:ring-gd-accent focus:border-transparent outline-none transition-all resize-none"
            required
          ></textarea>
        </div>
        
        <button 
          type="submit" 
          class="btn btn-primary py-3 px-8 rounded-xl bg-gl-accent dark:bg-gd-accent text-white hover:opacity-90"
        >
          Send Message
        </button>
      </form>
    </div>
  </div>
  
  <Footer slot="footer" />
</BaseLayout>

<script>
  // Simple form handling - in a real application, you'd want to replace this
  // with your actual form submission logic (e.g., to a serverless function)
  document.addEventListener('DOMContentLoaded', () => {
    const form = document.querySelector('form');
    if (form) {
      form.addEventListener('submit', (e) => {
        e.preventDefault();
        // Here you would typically send the form data to your backend
        // For demo purposes, we'll just show an alert
        alert('Thank you for your message! In a real application, this would be sent to the server.');
      });
    }
  });
</script>