---
import type { HTMLAttributes } from 'astro/types';

interface Props extends HTMLAttributes<'div'> {
  // No additional props needed
}

// Get the slot content
const { content } = Astro.slots;
---

<Fragment>
  <div class="my-8">
    <hr class="border-gl-accent dark:border-gd-accent mb-6" />
    <div class="text-3xl font-bold italic text-gl-accent dark:text-gd-accent text-center leading-relaxed">
      <slot />
    </div>
    <hr class="border-gl-accent dark:border-gd-accent mt-6" />
  </div>
</Fragment>

<style>
  /* Ensure the slot content is visible */
  :global(slot) {
    display: inline;
  }
</style>
