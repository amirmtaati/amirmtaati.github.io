---
export interface Props {
  aphorism: {
    content: string;
    date: Date;
    slug: string;
    tags?: string[];
  }
}

const { aphorism } = Astro.props;
import Tag from './Tag.astro';
---

<article class="mb-6 p-6 rounded-xl bg-gl-bg2/50 dark:bg-gd-bg2/50 border border-gl-border dark:border-gd-border hover:shadow-md transition-all relative h-full">
  <blockquote class="font-serif text-xl italic mb-4 leading-relaxed">
    "{aphorism.content}"
  </blockquote>
  
  <div class="flex justify-between items-center">
    <time class="text-sm text-gl-fg2 dark:text-gd-fg2">
      {new Date(aphorism.date).toLocaleDateString('en-US', {
        year: 'numeric',
        month: 'long',
        day: 'numeric'
      })}
    </time>
    
    {aphorism.tags && aphorism.tags.length > 0 && (
      <div class="flex flex-wrap gap-1">
        {aphorism.tags.slice(0, 2).map((tag) => (
          <Tag name={tag} />
        ))}
      </div>
    )}
  </div>
</article>