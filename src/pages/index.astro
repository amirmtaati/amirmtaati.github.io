---
import { getCollection } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<!doctype html>
<html lang="en" class="bg-gruvbox-bg0">
	<head>
		<BaseHead title={`Blog - ${SITE_TITLE}`} description={SITE_DESCRIPTION} />
	</head>
	<body class="bg-gruvbox-bg0 text-gruvbox-fg1 min-h-screen">
		<Header />
		<main class="max-w-4xl mx-auto px-4 py-12">
			<!-- About Me Section -->
			<section class="mb-16">
				<div class="text-center mb-8">
					<h1 class="text-4xl font-bold text-gruvbox-fg0 mb-4">Welcome</h1>
					<div class="w-16 h-1 bg-gruvbox-yellow mx-auto mb-6"></div>
				</div>
				
				<div class="bg-gruvbox-bg1 border border-gruvbox-bg3 rounded-lg p-8 mb-8">
					<div class="max-w-3xl mx-auto text-center">
						<p class="text-xl text-gruvbox-fg1 leading-relaxed mb-6">
							Hi, I'm Amir, an 18-year-old from Iran with a passion for computer science and building things that work well.
						</p>
						<p class="text-gruvbox-fg2 leading-relaxed mb-6">
							My interests span from theoretical computation to practical software development. I love working close to the metal with 
							<span class="text-gruvbox-green font-medium">C</span>, exploring functional programming with 
							<span class="text-gruvbox-purple font-medium">Racket</span>, and building efficient systems with 
							<span class="text-gruvbox-blue font-medium">Go</span> and 
							<span class="text-gruvbox-orange font-medium">Python</span>.
						</p>
						<p class="text-gruvbox-fg2 leading-relaxed mb-6">
							I also experiment with <span class="text-gruvbox-aqua font-medium">Julia</span> for scientific computing 
							and <span class="text-gruvbox-red font-medium">C++</span> when performance really matters. Whether it's 
							systems programming, building interpreters and compilers, or designing minimal software, I'm drawn to 
							understanding how things work under the hood.
						</p>
						<p class="text-gruvbox-fg2 leading-relaxed">
							This blog is where I share what I'm learning, the tools I'm building, and thoughts on clean, efficient software design. 
							I work primarily on Linux (Debian) with Emacs, always looking for that perfect balance between simplicity and power.
						</p>
					</div>
				</div>
			</section>

			<div class="mb-12">
				<h2 class="text-3xl font-bold text-gruvbox-fg0 mb-4">Latest Posts</h2>
				<p class="text-gruvbox-fg3 text-lg">
					Thoughts on programming, computer science, and the tools that make it all possible.
				</p>
			</div>

			<div class="space-y-6">
				{posts.map((post) => (
					<article class="border-b border-gruvbox-bg3 pb-6 last:border-b-0">
						<div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-2">
							<h2 class="text-xl font-semibold">
								<a 
									href={`/blog/${post.id}/`}
									class="text-gruvbox-fg0 hover:text-gruvbox-yellow transition-colors duration-200 no-underline"
								>
									{post.data.title}
								</a>
							</h2>
							<time class="text-gruvbox-fg3 text-sm font-mono flex-shrink-0">
								<FormattedDate date={post.data.pubDate} />
							</time>
						</div>
						{post.data.description && (
							<p class="text-gruvbox-fg2 mt-2 leading-relaxed">
								{post.data.description}
							</p>
						)}
					</article>
				))}
			</div>

			{posts.length === 0 && (
				<div class="text-center py-12">
					<p class="text-gruvbox-fg3 text-lg">No blog posts yet. Check back soon!</p>
				</div>
			)}
		</main>
		<Footer />
	</body>
</html>